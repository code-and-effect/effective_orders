%h2 Shopping Cart

- if cart.empty?
  %p Your cart is empty.

  %hr
  %h4= link_to 'Home', root_url, :class => 'btn'

- else
  %table.table
    %thead
      %tr
        %th Item
        %th Price
        %th
    %tbody
      - cart.cart_items.each do |item|
        %tr
          %td
            - if item.quantity > 1
              = "#{item.quantity}x "
            = item.title
          %td= number_to_currency(item.subtotal)
          %td= link_to_remove_from_cart(item)
    %tfoot
      %tr
        %th Subtotal
        %td= number_to_currency(cart.subtotal)
        %td
      %tr
        %th Tax
        %td= number_to_currency(cart.tax)
        %td
      %tr
        %th Total
        %td= number_to_currency(cart.total)
        %td

  %hr
  %h4= link_to_checkout :class => 'btn btn-primary pull-right'
  %h4= link_to_empty_cart
