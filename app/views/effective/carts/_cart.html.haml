.effective-cart
  %table.table
    %thead
      %tr
        %th.quantity Qty
        %th.item Item
        %th.price Price
    %tbody
      - cart.cart_items.each do |item|
        %tr
          %td.quantity
            = item.quantity
          %td.item
            = item.name.html_safe
            = ' - '
            = link_to_remove_from_cart(item)
          %td.price
            = price_to_currency(item.price)
      - if cart.blank?
        %tr
          %td.quantity
          %td.item No items in cart.
          %td.price
    %tfoot
      %tr
        %th.quantity
        %th.subtotal Subtotal
        %td.price.subtotal-price= price_to_currency(cart.subtotal)
