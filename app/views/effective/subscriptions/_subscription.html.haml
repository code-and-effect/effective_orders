%h3.effective-heading= subscription.plan[:name]

%table.table
  %tbody
    %tr
      %th Plan
      %td= subscription.plan[:description]
    %tr
      %th Started
      %td= Time.zone.at(subscription.stripe_subscription.start).strftime("%d-%b-%Y")
    - if subscription.stripe_subscription.discount.present?
      %tr
        %th Coupon
        %td= stripe_coupon_description(subscription.stripe_subscription.discount.coupon)
    %tr
      %th Status
      %td= subscription.stripe_subscription.status
    %tr
      %th Current Period Start
      %td= Time.zone.at(subscription.stripe_subscription.current_period_start).strftime("%d-%b-%Y")
    %tr
      %th Current Period End
      %td= Time.zone.at(subscription.stripe_subscription.current_period_end).strftime("%d-%b-%Y")

%table.table
  %thead
    %tr
      %th Date
      %th Number
      %th Period
      %th Charge
  %tbody
    - subscription.invoices.each do |invoice|
      %tr
        %td= Time.zone.at(invoice.date).strftime("%d-%b-%Y")
        %td= invoice.id
        %td
          = Time.zone.at(invoice.lines.first.period.start).strftime("%d-%b-%Y")
          to
          = Time.zone.at(invoice.lines.first.period.end).strftime("%d-%b-%Y")
        %td= price_to_currency(invoice.total)
