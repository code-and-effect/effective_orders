%table.table
  %thead
    %tr
      %th Order
      %th Date of Purchase
      %th Description
  %tbody
    - orders.each do |order|
      %tr
        %td= link_to "##{order.to_param}", order_path.gsub(':id', order.to_param)
        %td= order.purchased_at.strftime("%Y-%m-%d %H:%M")
        %td= order_summary(order)

- unless orders.present?
  %p You have no purchased orders
